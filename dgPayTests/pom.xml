	<name>Serenity project with JUnit and WebDriver</name>

	<properties>
		 <maven.compiler.target>1.7</maven.compiler.target>
         <maven.compiler.source>1.7</maven.compiler.source>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>
		<serenity.version>1.5.3</serenity.version>
		<webdriver.driver>firefox</webdriver.driver>
		
		<!--Use to indicate what test suite to generate a serenity report for -->	
		<dailyTestJobSuite>**/Login.java</dailyTestJobSuite>
		<!--<apiTests>**/PartTimerAPITests/*.java</apiTests>
